<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guzman.rotem.tamalsocialbank1.admin.AdminMainActivity">

    <Button
        android:id="@+id/btnManageUsers"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/asset124"
        app:layout_constraintBottom_toTopOf="@+id/btnManageProducts"
        app:layout_constraintEnd_toStartOf="@+id/guideline41"
        app:layout_constraintStart_toStartOf="@+id/guideline41" />

    <Button
        android:id="@+id/btnManageInventory"
        android:layout_width="290dp"
        android:layout_height="85dp"
        android:background="@drawable/asset157"
        app:layout_constraintEnd_toStartOf="@+id/guideline41"
        app:layout_constraintStart_toStartOf="@+id/guideline41"
        tools:layout_editor_absoluteY="301dp" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toTopOf="@+id/btnManageUsers"
        app:layout_constraintEnd_toStartOf="@+id/guideline41"
        app:layout_constraintStart_toStartOf="@+id/guideline41"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/asset_52_all" />

    <Button
        android:id="@+id/btnManageProducts"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/asset179"
        app:layout_constraintBottom_toTopOf="@+id/btnManageInventory"
        app:layout_constraintEnd_toStartOf="@+id/guideline41"
        app:layout_constraintStart_toStartOf="@+id/guideline41" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</android.support.constraint.ConstraintLayout>
