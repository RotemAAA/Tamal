<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guzman.rotem.tamalsocialbank1.registration.RegistrationChooseActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tvHeadLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/varela_round"
        android:text="הרשמה"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="37dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline52"
        app:layout_constraintStart_toStartOf="@+id/guideline52"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnMother"
        android:layout_width="290dp"
        android:layout_height="90dp"

        android:layout_marginBottom="52dp"
        android:background="@drawable/asset131"
        app:layout_constraintBottom_toTopOf="@+id/btnVolunteer"
        app:layout_constraintEnd_toStartOf="@+id/guideline52"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="@+id/guideline52" />

    <Button
        android:id="@+id/btnVolunteer"
        android:layout_width="290dp"
        android:layout_height="90dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/asset132"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline52"
        app:layout_constraintStart_toStartOf="@+id/guideline52" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</android.support.constraint.ConstraintLayout>
