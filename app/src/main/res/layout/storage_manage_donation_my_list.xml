<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSMDonationInInventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/varela_round"
        android:text="@string/in_inventory"
        android:textColor="@color/inStockProduct"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnSMDonationAccept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSMDonationDonorName" />

    <TextView
        android:id="@+id/tvSMDonationInInventoryNumberv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela_round"
        android:text="number"
        android:textColor="@color/inStockProduct"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSMDonationInInventory"
        app:layout_constraintEnd_toStartOf="@+id/tvSMDonationInInventory"
        app:layout_constraintTop_toTopOf="@+id/tvSMDonationInInventory" />

    <Button
        android:id="@+id/btnSMDonationBookDelivery"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/asset168"
        app:layout_constraintEnd_toStartOf="@+id/guideline48"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSMDonationDate" />

    <TextView
        android:id="@+id/tvSMDonationProductName1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/backTVDesType"
        android:padding="17dp"
        android:text="מטרנה Extra Care Comfort"
        android:fontFamily="@font/varela_round"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSMDonationProductNumber1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvSMDonationProductNumber1"
        app:layout_constraintTop_toTopOf="@+id/tvSMDonationProductNumber1" />

    <TextView
        android:id="@+id/tvSMDonationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/varela_round"
        android:gravity="center"
        android:text="17:05"
        android:textColor="@color/time_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSMDonationDate"
        app:layout_constraintStart_toStartOf="@+id/guideline48"
        app:layout_constraintTop_toTopOf="@+id/tvSMDonationDate" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.21" />

    <TextView
        android:id="@+id/tvSMDonationDonorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/varela_round"
        android:text="דור צמח"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnSMDonationBookDelivery" />

    <Button
        android:id="@+id/btnSMDonationAccept"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/asset163"
        app:layout_constraintEnd_toStartOf="@+id/guideline48"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSMDonationBookDelivery" />

    <TextView
        android:id="@+id/tvSMDonationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/varela_round"
        android:gravity="center"
        android:text="17.03.2018"
        android:textColor="@color/colorPrimaryText"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSMDonationProductNumber1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/backTVDesNum"
        android:padding="8dp"
        android:text="20"
        android:fontFamily="@font/varela_round"
        android:textColor="@color/colorPrimaryTextWhite"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSMDonationAccept" />

</android.support.constraint.ConstraintLayout>