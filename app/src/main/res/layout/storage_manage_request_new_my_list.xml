<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSMNewRequestInInventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/varela_round"
        android:text="5"
        android:textColor="#50b281"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSMNewRequestInStockNumber"
        app:layout_constraintEnd_toStartOf="@+id/tvSMNewRequestInStockNumber"
        app:layout_constraintTop_toTopOf="@+id/tvSMNewRequestInStockNumber"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnSMNewRequestCallDeliveryGuy"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tvSMNewRequestDate"
        android:background="@drawable/asset168" />

    <Button
        android:id="@+id/btnSMNewRequestChangeStatus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSMNewRequestCallDeliveryGuy"
        android:background="@drawable/asset169" />

    <TextView
        android:id="@+id/tvSMNewRequestShowProduct2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/backTVDesType"
        android:padding="17dp"
        android:text="מטרנה Extra Care Comfort"
        android:fontFamily="@font/varela_round"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSMNewRequestShowProduct1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSMNewRequestShowProduct1"
        app:layout_constraintTop_toTopOf="@+id/tvSMNewRequestShowProduct1" />

    <TextView
        android:id="@+id/tvSMNewRequestShowProduct1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/backTVDesNum"
        android:padding="8dp"
        android:text="20"
        android:fontFamily="@font/varela_round"
        android:textColor="@color/colorPrimaryTextWhite"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSMNewRequestChangeStatus"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvSMNewRequestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/varela_round"
        android:gravity="center"
        android:text="17:05"
        android:textColor="#e99b1f"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSMNewRequestDate"
        app:layout_constraintStart_toEndOf="@+id/tvSMNewRequestDate"
        app:layout_constraintTop_toTopOf="@+id/tvSMNewRequestDate"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvSMNewRequestMotherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/varela_round"
        android:text="שם האמא"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnSMNewRequestCallDeliveryGuy" />

    <TextView
        android:id="@+id/tvSMNewRequestInStockNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/varela_round"
        android:text="כרגע במלאי"
        android:textColor="#50b281"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnSMNewRequestChangeStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/tvSMNewRequestDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/varela_round"
        android:gravity="center"
        android:text="17.03.2018"
        android:textColor="@color/colorPrimaryText"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSMNewRequestShowProductNumber1"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginEnd="224dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tvSMNewRequestShowProduct2"
        app:layout_constraintEnd_toStartOf="@+id/tvSMNewRequestShowProduct2"
        app:layout_constraintTop_toTopOf="@+id/tvSMNewRequestShowProduct2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/varela_round"
        android:text="קיבולת למוצר"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSMNewRequestMotherName" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela_round"
        android:text="5"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/asset_99_s_19" />

</android.support.constraint.ConstraintLayout>