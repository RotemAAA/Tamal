<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.guzman.rotem.tamalsocialbank1.donor.NearbyDropOffPoint"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/ivCenterName"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/asset_75_s_07" />

    <ImageView
        android:id="@+id/ivCenterAddress"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCenterName"
        app:srcCompat="@drawable/asset_76_s_07" />

    <ImageView
        android:id="@+id/ivCenterPhone"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/gh28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCenterAddress"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/asset_77_s_07" />

    <TextView
        android:id="@+id/tvCenterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/varela_round"
        android:paddingEnd="2dp"
        android:text="מרכז קהילתי נאות שושנים"
        android:textColor="#23bcf0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCenterName"
        app:layout_constraintEnd_toStartOf="@+id/ivCenterName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivCenterName" />

    <TextView
        android:id="@+id/tvCenterAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/varela_round"
        android:padding="2dp"

        android:text="רחוב סיגלון 12 חולון"
        android:textAlignment="center"
        android:textColor="#037cbe"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCenterAddress"
        app:layout_constraintEnd_toStartOf="@+id/ivCenterAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivCenterAddress" />

    <TextView
        android:id="@+id/tvCenterPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/varela_round"
        android:padding="2dp"
        android:text="טל: 03-5503977"
        android:textColor="#037cbe"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCenterPhone"
        app:layout_constraintEnd_toStartOf="@+id/ivCenterPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivCenterPhone" />

    <android.support.constraint.Guideline
        android:id="@+id/gh28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28" />

    <android.support.constraint.Guideline
        android:id="@+id/gh68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68" />

    <Button
        android:id="@+id/btnWazeNavigation"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/asset150"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnDropProductsHere"
        app:layout_constraintTop_toTopOf="@+id/gh85" />

    <Button
        android:id="@+id/btnDropProductsHere"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_pick_product_button"
        android:fontFamily="@font/varela_round"
        android:text="הורדת מוצרים כאן"
        android:textColor="#fff"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/gh82"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mvNearByDropOffCenter" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mvNearByDropOffCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gh68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gh28"
        app:layout_constraintVertical_bias="0.512" />

    <android.support.constraint.Guideline
        android:id="@+id/gh72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72" />

    <android.support.constraint.Guideline
        android:id="@+id/gh82"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

    <android.support.constraint.Guideline
        android:id="@+id/gh85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

</android.support.constraint.ConstraintLayout>
