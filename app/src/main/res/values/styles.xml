<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeIndigo" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:buttonStyle">@style/MyButton</item>
    </style>

    <style name="MyButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/main_buttons</item>
        <item name="android:textColor">@color/colorPrimaryTextWhite</item>
        <item name="android:width">200dp</item>
        <item name="android:height">80dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/varela_round</item>
        <item name="android:drawableLeft">@drawable/half_big_button</item>
        <item name="android:layout_margin">0dip</item>

    </style>

    <style name="SpinnerItem">
        <item name="android:fontFamily">@font/varela_round</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
